* {
    box-sizing: border-box;
}
html,
body {
    padding: 0;
    margin: 0;
    width: 100%;
    height: 100%;
}
.app-container {
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.book-card-cover {
    width: 200px;
    height: 280px;
    border-radius: 2px;
}
.book-cards-grid-container {
    padding-top: 50px;
    background: linear-gradient(180deg, #364663, #1b2332);
    width: 100%;
    height: 100%;
}
.book-cards-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-content: flex-start;
    align-items: flex-start;
    width: 100%;
    height: 100%;
    overflow: auto;
}
.book-card-cover-container {
    position: relative;
}
.book-card-cover-container .fa {
    font-size: 25px;
    position: absolute;
    bottom: 10px;
    left: 10px;
    color: white;
    opacity: 0.8;
    -webkit-filter: drop-shadow(0px 0px 3px black);
    -moz-filter: drop-shadow(0px 0px 3px black);
    filter: drop-shadow(0px 0px 3px black);
}
.book-card {
    flex-direction: column;
    margin: 10px;
    padding: 2px;
    border: 1px solid #555;
    border-radius: 4px;
    background-color: #000;
    box-shadow: 3px 3px 5px 0px rgba(20, 20, 20, 0.6);
}
.book-card-progress-container {
    width: 100%;
    height: 7px;
    padding: 1px;
    background-color: #1b2332;
}
.book-card-progress {
    position: relative;
    height: 100%;
    width: 30%;
    background-color: #7700cf;
    opacity: 0.8;
}
.heading {
    position: fixed;
    top: 0;
    width: 100%;
    padding: 5px 20px;
    background-color: whitesmoke;
    z-index: 999;
    background-color: #2B386B;
    box-shadow: 0px 3px 5px rgba(0, 0, 0, 0.8);
}
.logo {
    display: inline-block;
    border-bottom: 4px solid white;
    color: white;
}
.heading .logo {
    font-size: 24px;
}
.welcome {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 50px;
}
.welcome-text-container {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
    padding: 20px;
}
.welcome-app-description {
    font-size: 32px;
    max-width: 600px;
    text-shadow: 2px 2px 3px black;
}
.welcome-dropzone-description {
    font-size: 26px;
    text-shadow: 2px 2px 3px black;
}
.welcome-show-library {
    font-size: 26px;
    text-shadow: 2px 2px 3px black;
}
.overlay-dropzone {
    background-color: #121721;
    opacity: 0.9;
    position: absolute;
    width: 100%;
    height: 100%;
}
.drop-icon {
    font-size: 8em;
    opacity: 0.3;
}
.logo-in-text {
    text-decoration;
}
.sl-link-btn {
    border: 1px solid white;
    border-radius: 3px;
    padding: 3px 10px 8px 10px;
    margin: 10px;
    cursor: pointer;
    background-color: rgba(200, 200, 200, 0.1);
}
body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Open Sans", "Helvetica Neue", sans-serif;
    letter-spacing: 0;
    font-weight: 400;
    font-style: normal;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    -moz-font-feature-settings: "liga" on;
    color: rgba(0, 0, 0, 0.8);
    font-size: 18px;
    line-height: 1.4;
}
.overlay-toggle {
    position: fixed;
    right: 30px;
    bottom: 60px;
}

a
  position relative
  z-index 22222

.dnd-container
  position fixed
  left 0
  right 0
  top 0
  bottom 0

.dnd-drop
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  background rgba(128, 127, 127, 0.3)

.loader-container
  display: flex
  align-items: center

.loader-spinner
  margin: 70px auto 0
  display: block
  width: 1em
  height: 1em
  font-size: 2em
  border: .1em solid #15a6eb
  border-top-right-radius: .05em
  border-bottom-left-radius: .05em
  border-top-left-radius: .3em
  border-bottom-right-radius: .3em
  animation: turn 1.5s infinite,corner 1.5s infinite

@keyframes turn
  to
    transform rotate(90deg) translate(0.5em, 0.5em)


@keyframes corner
  30%
    border-radius 0.075em
  100%
    border-top-left-radius 0.05em
    border-bottom-right-radius 0.05em
    border-top-right-radius 0.3em
    border-bottom-left-radius 0.3em

